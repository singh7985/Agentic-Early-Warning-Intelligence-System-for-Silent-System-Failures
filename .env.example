# Environment Configuration
# Copy this file to .env and fill in actual values

# API Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Database
PGVECTOR_CONNECTION_STRING=postgresql://user:password@localhost:5432/ewis_db
FAISS_INDEX_PATH=./data/faiss_index

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=agentic-ewis-baseline

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ewis.log

# Data
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
CMAPSS_DATASET_URL=https://www.kaggle.com/datasets/behrad3d/nasa-cmaps

# Model
MODEL_CHECKPOINT_PATH=./models/checkpoints
VECTOR_DB_PATH=./data/vector_db

# API Server
API_PORT=8000
API_HOST=0.0.0.0
DEBUG=False

# System
RANDOM_SEED=42
NUM_WORKERS=4
